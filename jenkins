pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/mygitlook/firsthtmlapp.git'
            }
        }

        stage('Install Apache') {
            steps {
                sh 'sudo apt update'
                sh 'sudo apt install -y apache2'
            }
        }

        stage('Deploy Application') {
            steps {
                sh 'sudo cp -R * /var/www/html'
            }
        }
    }
}
